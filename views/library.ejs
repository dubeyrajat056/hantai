<%- include('partials/header', {title: title}) %>
<%- include('partials/navbar') %>

<main class="container my-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Your Library</h2>
    <span class="badge bg-primary"><%= mangas.length %> manga</span>
  </div>
  
  <% if (mangas.length > 0) { %>
    <div class="row row-cols-1 row-cols-md-2 g-4">
      <% mangas.forEach(m => { %>
        <div class="col">
          <div class="card h-100">
            <div class="row g-0">
              <div class="col-md-4">
                <a href="/manga/<%= m.id %>">
                  <img src="<%= m.thumbnail %>" class="img-fluid rounded-start library-thumbnail" alt="<%= m.title %>">
                </a>
              </div>
              <div class="col-md-8">
                <div class="card-body">
                  <h5 class="card-title">
                    <a href="/manga/<%= m.id %>" class="text-decoration-none"><%= m.title %></a>
                  </h5>
                  <p class="card-text text-muted"><%= m.author || 'Unknown Author' %></p>
                  <p class="card-text">
                    <small class="text-muted">
                      Last read: <%= new Date(m.libraryInfo.lastRead).toLocaleDateString() %>
                    </small>
                  </p>
                  <div class="d-flex gap-2">
                    <% if (m.chapters && m.chapters.length > 0) { %>
                      <a href="/read/<%= m.id %>/<%= m.libraryInfo.lastReadChapter || m.chapters[0].id %>" 
                         class="btn btn-sm btn-primary">
                        Continue Reading
                      </a>
                    <% } %>
                    <button class="btn btn-sm btn-outline-danger remove-from-library" data-manga-id="<%= m.id %>">
                      Remove
                    </button>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  <% } else { %>
    <div class="text-center py-5">
      <i class="bi bi-book display-1 text-muted"></i>
      <h3 class="text-muted">Your library is empty</h3>
      <p>Start reading some manga to add them to your library</p>
      <a href="/" class="btn btn-primary">Browse Manga</a>
    </div>
  <% } %>
</main>

<%- include('partials/footer') %>

<script>
  // Remove from library functionality
  document.querySelectorAll('.remove-from-library').forEach(button => {
    button.addEventListener('click', function() {
      const mangaId = this.getAttribute('data-manga-id');
      
      if (confirm('Are you sure you want to remove this manga from your library?')) {
        fetch(`/api/library/${mangaId}`, { 
          method: 'DELETE'
        })
          .then(response => response.json())
          .then(data => {
            if (data.success) {
              this.closest('.col').remove();
              
              // If no items left, show empty state
              if (document.querySelectorAll('.remove-from-library').length === 0) {
                document.querySelector('main').innerHTML = `
                  <div class="text-center py-5">
                    <i class="bi bi-book display-1 text-muted"></i>
                    <h3 class="text-muted">Your library is empty</h3>
                    <p>Start reading some manga to add them to your library</p>
                    <a href="/" class="btn btn-primary">Browse Manga</a>
                  </div>
                `;
              }
            }
          })
          .catch(error => {
            console.error('Error:', error);
            alert('Failed to remove from library. Please try again.');
          });
      }
    });
  });
</script>